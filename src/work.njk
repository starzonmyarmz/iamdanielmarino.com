---
layout: base.njk
title: Work
permalink: /work/
---

<header>
  <h1>{{ title }}</h1>
</header>

{# <h2>Case Studies</h2> #}

<ul class="posts case-studies">
  {% for post in collections.work | categoryFilter('casestudy') %}
    <li>
      <a href="{{ post.url }}">
        <img src="/img/work/harvest-icon.svg" alt="Harvest logo" height="48" width="48" />
        <h3>{{ post.data.title }}</h3>
        <small>{{ post.data.blurb }}</small>
      </a>
    </li>
  {% endfor %}
</ul>

