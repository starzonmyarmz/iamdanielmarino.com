---
layout: base.njk
title: Posts
permalink: /posts/
---

<header>
  <h1>{{ title }}</h1>
</header>

<ul class="posts">
  {% for post in collections.post | reverse %}
    <li>
      <h3>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </h3>
      <small>{{ post.date | dateFilter }}</small>
    </li>
  {% endfor %}
</ul>
