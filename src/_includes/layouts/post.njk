{% extends 'layouts/base.njk' %}
{% set pageType = 'post' %}

{% block content %}
  <main id="content">
    <article>
      <header class="post-header">
        <h1 class="post-title">{{ title }}</h1>
        <div class="post-meta">
          {{ page.date | dateFilter }}
        </div>
      </header>

      <section class="post-content">
        {{ content | safe }}
      </section>
    </article>
  </main>
{% endblock content %}
